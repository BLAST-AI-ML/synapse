# max_step
max_step = 21000

# amr
amr.max_level = 0
amr.n_cell = 256 6144
warpx.numprocs = 1 12

# Parameters of the fitted density
my_constants.n0 = 2.11e+25 # peak molecular density, in m-3
my_constants.dens_width = 77.45e-6 # width of the density profile, in m

# geometry
geometry.dims = RZ
geometry.prob_hi = 100e-6 0
geometry.prob_lo = 0 -120e-6
warpx.n_rz_azimuthal_modes = 2

# boundary
boundary.field_hi = none damped
boundary.field_lo = none damped
boundary.particle_hi = absorbing absorbing
boundary.particle_lo = none absorbing

# algo
algo.maxwell_solver = psatd
algo.particle_shape = 3

# particles
particles.species_names = electrons atoms

# atoms
atoms.charge = q_e
atoms.do_continuous_injection = 1
atoms.do_field_ionization = 1
atoms.injection_style = nuniformpercell
atoms.ionization_initial_level = 0
atoms.ionization_product_species = electrons
atoms.mass = 2.3258668557839402e-26
atoms.momentum_distribution_type = constant
atoms.num_particles_per_cell_each_dim = 2 8 2
atoms.physical_element = N
atoms.profile = parse_density_function
atoms.density_function(x,y,z) = 2*n0*exp(-((z-200e-6)/dens_width)**2)
atoms.zmax = 400e-06 # Length of the plasma
atoms.zmin = 0.

# electrons
electrons.charge = -q_e
electrons.mass = m_e

# diagnostics
diagnostics.diags_names = diag
diag.diag_type = Full
diag.fields_to_plot = Er Et Ez rho_electrons
diag.format = openpmd
diag.intervals = 5000::500
diag.write_species = 0

# laser
lasers.names = laser1
laser1.direction = 0 0 1
laser1.a0 = 1.
laser1.profile      = from_file
laser1.polarization = 1 0 0
laser1.position = 0.0 0.0 -1e-9
laser1.lasy_file_name = "diags/laser_profile_00000.bp"
laser1.wavelength = 8e-07

# moving window
warpx.do_moving_window = 1
warpx.moving_window_dir = z
warpx.moving_window_v = 1.0
